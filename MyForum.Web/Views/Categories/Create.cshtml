@using MyForum.Web.Models.Categories
@model CategoriesCreateViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Create Category";
}

<div class="container-fluid d-flex justify-content-center text-center w-100">
    <form asp-controller="Categories" asp-action="Create" method="post">
        <h1>Create Category</h1>
        <br />
        <label asp-for="@Model.Name" class="font-weight-bold"></label>
        <div class="form-group">
            <textarea asp-for="@Model.Name" rows="4" class="form-control"></textarea>
            <span asp-validation-for="@Model.Name"></span>
        </div>
        <label asp-for="@Model.Description" class="font-weight-bold"></label>
        <div class="form-group">
            <textarea asp-for="@Model.Description" rows="5" class="form-control"></textarea>
            <span asp-validation-for="@Model.Description"></span>
        </div>
        <label asp-for="@Model.ImageUrl" class="font-weight-bold"></label>
        <div class="form-group">
            <textarea asp-for="@Model.ImageUrl" rows="2" class="form-control"></textarea>
            <span asp-validation-for="@Model.ImageUrl"></span>
        </div>
        <br />
        <button class="bg-danger w-50 font-weight-bold" type="submit">Create</button>
        <br />
        <br />
    </form>
</div>

@using MyForum.Web.Models.News
@model NewsAllInfoListViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "All News";
}
<br />
<br />
<div class="container text-center">
    <div class="row"></div>
    @if (Model.News.Count == 0)
    {
        <h1>Currently there is no news...</h1>
    }

    @foreach (var news in Model.News)
    {
        <div class="row">
            <div class="col-md-3 media">
                <img src="@news.ImageUrl" class="mr-3" alt="@news.Name" width="100" height="100">
                <div class="media-body">
                    <h5 class="mt-0">
                        <a asp-controller="News"
                           asp-action="Details"
                           asp-route-newsId="@news.Id">@news.Name</a>
                    </h5>
                    @news.Content.Substring(0, 30).Insert(30, "...")
                </div>
            </div>
        </div>
    }
</div>
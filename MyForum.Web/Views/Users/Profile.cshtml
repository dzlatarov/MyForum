@using MyForum.Web.Models.Users
@using System.Security.Claims
@using MyForum.Infrastructure
@model UsersProfileViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    ViewData["Title"] = "Profile";
}

@*<link rel="stylesheet" href="https://bootswatch.com/4/simplex/bootstrap.min.css" />*@


<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">

                <div class="card-body">
                    <div class="card-title mb-4">
                        <div class="d-flex justify-content-start">
                            <div class="image-container">
                                <img src="http://placehold.it/150x150" id="imgProfile" style="width: 150px; height: 150px" class="img-thumbnail" />
                                @*<div class="middle">
                                        <input type="button" class="btn btn-secondary" id="btnChangePicture" value="Change" />
                                        <input type="file" style="display: none;" id="profilePicture" name="file" />
                                    </div>*@
                            </div>
                            <div class="userData ml-3">
                                <h2 class="d-block" style="font-size: 1.5rem; font-weight: bold"><a href="javascript:void(0);">@Model.Username</a></h2>
                                <h6 class="d-block"><a >@Model.ThreadsCount</a> Threads Count</h6>
                                <h6 class="d-block"><a >@Model.PostsCount</a> Posts Count</h6>
                            </div>
                            @*<div class="ml-auto">
                                    <input type="button" class="btn btn-primary d-none" id="btnDiscard" value="Discard Changes" />
                                </div>*@
                        </div>
                        @if (Model.Id == this.User.FindFirstValue(ClaimTypes.NameIdentifier))
                        {
                            <div class="d-flex justify-content-end">
                                <a class="btn btn-primary btn-lg" type="button" asp-controller="Users" asp-action="EditProfile" asp-route-id="@Model.Id">Edit</a>
                            </div>
                        }
                        else
                        {
                            if (this.User.IsInRole(GlobalConstants.AdminRole))
                            {
                                <div class="d-flex justify-content-end">
                                    <a class="btn btn-primary btn-lg" type="button" asp-controller="Users" asp-action="EditProfile" asp-route-id="@Model.Id">Edit</a>
                                </div>
                            }
                        }
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="basicInfo-tab" data-toggle="tab" href="#basicInfo" role="tab" aria-controls="basicInfo" aria-selected="true">Basic Info</a>
                                </li>
                                @*<li class="nav-item">
                                        <a class="nav-link" id="connectedServices-tab" data-toggle="tab" href="#connectedServices" role="tab" aria-controls="connectedServices" aria-selected="false">Connected Services</a>
                                    </li>*@
                            </ul>
                            <div class="tab-content ml-1" id="myTabContent">
                                <div class="tab-pane fade show active" id="basicInfo" role="tabpanel" aria-labelledby="basicInfo-tab">


                                    <div class="row">
                                        <div class="col-sm-3 col-md-2 col-5">
                                            <label style="font-weight:bold;">First Name</label>
                                        </div>
                                        <div class="col-md-8 col-6">
                                            @Model.FirstName
                                        </div>
                                    </div>
                                    <hr />

                                    <div class="row">
                                        <div class="col-sm-3 col-md-2 col-5">
                                            <label style="font-weight:bold;">Middle Name</label>
                                        </div>
                                        <div class="col-md-8 col-6">
                                            @Model.MiddleName
                                        </div>
                                    </div>
                                    <hr />

                                    <div class="row">
                                        <div class="col-sm-3 col-md-2 col-5">
                                            <label style="font-weight:bold;">Last Name</label>
                                        </div>
                                        <div class="col-md-8 col-6">
                                            @Model.LastName
                                        </div>
                                    </div>
                                    <hr />

                                    <div class="row">
                                        <div class="col-sm-3 col-md-2 col-5">
                                            <label style="font-weight:bold;">Email</label>
                                        </div>
                                        <div class="col-md-8 col-6">
                                            @Model.Email
                                        </div>
                                    </div>
                                    <hr />

                                    @*<div class="row">
                                            <div class="col-sm-3 col-md-2 col-5">
                                                <label style="font-weight:bold;">Birth Date</label>
                                            </div>
                                            <div class="col-md-8 col-6">
                                                March 22, 1994.
                                            </div>
                                        </div>
                                        <hr />*@


                                    <div class="row">
                                        <div class="col-sm-3 col-md-2 col-5">
                                            <label style="font-weight:bold;">Gender</label>
                                        </div>
                                        <div class="col-md-8 col-6">
                                            @Model.Gender
                                        </div>
                                    </div>
                                    <hr />

                                    <div class="row">
                                        <div class="col-sm-3 col-md-2 col-5">
                                            <label style="font-weight:bold;">Phone Number</label>
                                        </div>
                                        <div class="col-md-8 col-6">
                                            @Model.PhoneNumber
                                        </div>
                                    </div>
                                    <hr />
                                </div>
                                @*<div class="tab-pane fade" id="connectedServices" role="tabpanel" aria-labelledby="ConnectedServices-tab">
                                        Facebook, Google, Twitter Account that are connected to this account
                                    </div>*@
                            </div>
                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>
</div>